{
   "manifest_version": 2,
   "name": "PauseOnEnd",
   "description": "Pauses the video on its last second",
   "version": "1.4.0",
   "content_scripts": [ {
      "js": [ "PauseOnEnd.js" ],
      "matches": [ "https://www.youtube.com/*index=*" ]
   } ],
   "background": {
      "scripts": ["background.js"],
      "persistent": false
   },
   "permissions": [
      "*://www.youtube.com/*", "tabs", "storage"
   ], 
   "icons": {
      "128": "PauseOnEnd.png"
   }
}
